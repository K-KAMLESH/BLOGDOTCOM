<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/headers') %>
        <title>Add New Blog</title>
</head>

<body>
    <%- include('./partials/navbar') %>

        <div class="container mt-3">

            <h1>
                <%= blog.title %>
            </h1>
            <div><img src="/uploads/<%= blog.coverImage %>" alt="<%= blog.title %>" width="200px"></div>
            <pre style="width:80vw; white-space: pre-wrap; word-wrap: break-word;">
                <%= blog.content %>
            </pre>
        </div>
        </h1>

        <div class="container mt-3">
            <h2>Comments:<%= comments.length%>
            </h2>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id%>" method="post">
                    <input type="text" name="content" placeholder="type your comment here...">
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
                <% } %>

                    <% comments.forEach(comment=> { %>
                        <div class="container mt-2"><img src="<%=comment.createdBy.profileImageURL %>" width="20px">
                            <span>
                                <%= comment.createdBy.name %>
                            </span>
                            <span>
                                <%=comment.content %>
                            </span>
                        </div>
                        <% }) %>
        </div>





        <%- include('./partials/script') %>
</body>

</html>